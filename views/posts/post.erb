<div class='sixteen columns'>
  <div class='eight columns omega aside-container'>
    <h4><%= @post['title'] %> by <%= @user['username'] %></h4>
    <%= @post['content'] %>
  </div>
  
  <div class='eight columns omega aside-container'>
    <h4>Comments section</h4>
    <form action="/posts/<%= @post['id'] %>/comments" method='post'>
      <input type='text' placeholder='New comment' name='content'>
      <input type='hidden' name='user_id' value='<%= @current_user['id'] %>'>
      <input type='submit' value='Submit'>
    </form>
  
    
    <% @comments.each do |comment| %>
      <p class='comment'><%= comment['user'] %>: <%= comment['content'] %><form actio='/delete_comment/<%= comment['id'] %>' method='post'><button class='delete' type='submit'>Delete Comment</button></form></p>
    <% end %>

  </div>
</div><!-- end sixteen columnns -->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
<script type="text/javascript">

$(document).on('click', 'button.delete', function (e) {
  e.preventDefault();
  $('p.comment').remove();
});

</script>
